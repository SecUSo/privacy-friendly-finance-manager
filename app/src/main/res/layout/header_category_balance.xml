<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/tv_categoryBudgetMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_categoryBudgetMonth_label"
        app:layout_constraintEnd_toStartOf="@+id/tv_categoryBudget"
        app:layout_constraintTop_toBottomOf="@+id/tv_categoryExpensesMonth"
        app:layout_constraintTop_toTopOf="@+id/tv_categoryBudgetMonth_label"
        app:layout_constraintVertical_bias="0.0"
        tools:text="$50.00" />

    <TextView
        android:id="@+id/tv_categoryBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_categoryBudgetMonth_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_categoryBudgetMonth_label"
        tools:text="/ $50.00" />

    <TextView
        android:id="@+id/tv_categoryBudgetMonth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/activity_category_budget_month_left"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_categoryIncomeMonth_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_categoryExpensesMonth_label" />

    <TextView
        android:id="@+id/tv_categoryBalanceMonth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/activity_category_category_balance_month_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_categoryBalanceMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="@string/balance"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$50.00" />

    <TextView
        android:id="@+id/tv_categoryIncomeMonth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="@string/activity_category_income_month_label"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_categoryBalanceMonth_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_categoryBalanceMonth_label" />

    <TextView
        android:id="@+id/tv_categoryExpensesMonth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/activity_category_expenses_month_label"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_categoryIncomeMonth_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_categoryIncomeMonth_label" />

    <TextView
        android:id="@+id/tv_categoryIncomeMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_categoryIncomeMonth_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_categoryIncomeMonth_label"
        app:layout_constraintVertical_bias="1.0"
        tools:text="$50.00" />

    <TextView
        android:id="@+id/tv_categoryExpensesMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_categoryExpensesMonth_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_categoryExpensesMonth_label"
        tools:text="$50.00" />

</androidx.constraintlayout.widget.ConstraintLayout>